<section class='single-post-containter'>
    {{> post-view post}}

    {{#unless (ifEquals session.user_id post.user_id)}}

    {{> message-form post}}

    {{else}}
    <div class='edit-div'>
        <a href='/edit/{{post.id}}'>Manage</a>
    </div>

    {{/unless}}
</section>

{{#if (ifEquals session.user_id post.user_id)}}

{{> messages post}}

{{else}}

{{#each post.message_chains as |convo|}}

{{#if (ifEquals ../session.user_id convo.creator_id)}}
{{> single-convo convo}}
{{/if}}

{{/each}}


{{/if}}


{{#if session.loggedIn}}
<script src="/javascript/message.js"></script>
{{/if}}