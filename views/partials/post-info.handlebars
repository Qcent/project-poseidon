<article class="article">
    <div class="post-container">
        <div class="post-head"> by <a href='/user/{{id}}' class="nochange">{{username}}</a> {{created_at}}</div>
        {{#unless view}}
        <a class='post-link' href="/post/{{id}}">
            {{/unless}}
            <section class="post-body">
                <h2 class="title">
                    {{title}}
                </h2>
                <p class="content">
                    {{{post_content}}}
                </p>
            </section>
            {{#unless view}}
        </a>
        {{/unless}}
    </div>
</article>