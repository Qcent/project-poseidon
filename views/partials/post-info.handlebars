<div class="post-container">
    <div class="post-head"> by <a href='/user/{{user.id}}' class="headLink">{{user.username}}</a> {{format_date
        created_at}} in <h5>{{category.name}}</h5>
    </div>
    <a class='post-link' href="/post/{{id}}">
        <section class="post-body">
            {{#if uploaded_photo}}
            <img src="../{{uploaded_photo}}" class='post-photo-thumb'>
            {{/if}}
            <h2 class="title">
                {{title}}
            </h2>
            <p class="content">
                {{{content}}}
            </p>
        </section>
    </a>
</div>