<article class='edit-post-container'>

    <h2 class="title">Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content">Content</label>
            <textarea id="post-content" name="post-content">{{post.content}}</textarea>
        </div>
        <div class="form-btn-container">
            <button type="button" class="form-btn sold-post-btn">Mark as Sold</button>
            <button type="submit" class='form-btn'>Update post</button>
            <button type="button" class="form-btn delete-post-btn">Delete post</button>
        </div>
    </form>

</article>

{{> messages post }}

{{#if post.message_chains.length}}
<script src="/javascript/message.js"></script>
{{/if}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>